
<h1><%= @category.name %></h1>

<%= render @category %>
<h2>Tasks:</h2>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.body, category_task_path(@category, task) %>
    </li>
  <% end %>
</ul>

<%= link_to "Edit this category", edit_category_path(@category) %> 
<%= link_to "Back to categories", categories_path %>
<br>
<%= link_to 'New Task', new_category_task_path(@category) %>